// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.194.0/containers/docker-in-docker
{
	"name": "WebAuthAPP",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--init",
		"--privileged"
	],
	"mounts": [
		"source=dind-var-lib-docker,target=/var/lib/docker,type=volume"
	],
	"overrideCommand": false,
	// Set *default* container specific settings.json values on container create.
	"settings": {},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"Angular.ng-template",
		"christian-kohler.npm-intellisense",
		"christian-kohler.path-intellisense",
		"CodeStream.codestream",
		"codezombiech.gitignore",
		"cyrilletuzi.angular-schematics",
		"davidbabel.vscode-simpler-icons",
		"dbaeumer.vscode-eslint",
		"DeepInThought.vscode-shell-snippets",
		"doggy8088.angular-extension-pack",
		"donjayamanne.githistory",
		"eamodio.gitlens",
		"EditorConfig.EditorConfig",
		"eg2.tslint",
		"formulahendry.auto-rename-tag",
		"foxundermoon.shell-format",
		"howardzuo.vscode-git-tags",
		"IJustDev.gitea-vscode",
		"infinity1207.angular2-switcher",
		"johnpapa.Angular2",
		"krizzdewizz.refactorix",
		"leizongmin.node-module-intellisense",
		"MariusAlchimavicius.json-to-ts",
		"Mikael.Angular-BeastCode",
		"ms-azuretools.vscode-docker",
		"MS-CEINTL.vscode-language-pack-zh-hant",
		"ms-vscode.vscode-typescript-tslint-plugin",
		"ms-vsliveshare.vsliveshare",
		"ms-vsliveshare.vsliveshare-audio",
		"ms-vsliveshare.vsliveshare-pack",
		"nhoizey.gremlins",
		"obenjiro.arrr",
		"p1c2u.docker-compose",
		"piotrpalarz.vscode-gitignore-generator",
		"quicktype.quicktype",
		"redhat.vscode-yaml",
		"steoates.autoimport",
		"stringham.move-ts",
		"wayou.vscode-todo-highlight",
		"xabikos.JavaScriptSnippets",
    "bradlc.vscode-tailwindcss"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		4200
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install",
	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "root",
	"build": {
		"args": {
			"UPGRADE_PACKAGES": "true"
		}
	}
}
